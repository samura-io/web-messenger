.classicInput {
    width: 100%;
    outline: none;
    border: none;
    background-color: var(--bgDarkGray);
    padding: 10px 20px;
    border-radius: 30px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    @mixin font 500, 12px, 12px;

    &:disabled {
        opacity: 0.7;
    }

    &::placeholder {
        color: var(--textGray);
    }
}