.RegisterForm {
    width: 100%;
    height: 100%;
    
    &__content {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    &__title {
        display: block;
        margin-bottom: 40px;
        text-align: center;
        width: 100%;

        @mixin font 500, 20px, 20px;
    }

    &__footer {
        margin-top: auto;
        width: 100%;
    }
}
